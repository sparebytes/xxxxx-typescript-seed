{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "yarn",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": ["install"]
        },
        {
            "taskName": "upgrade",
            "args": ["upgrade"]
        },
        {
            "taskName": "test",
            "args": ["run", "test"]
        },
        {
            "taskName": "build",
            "args": ["run", "build"],
            "isBuildCommand": true
        },
        {
            "taskName": "build:watch",
            "args": ["run", "build:watch"],
            "isBackground": true,
            "isBuildCommand": true
        },
        {
            "taskName": "clean",
            "args": ["run", "clean"],
            "isBuildCommand": true
        }
    ]
}