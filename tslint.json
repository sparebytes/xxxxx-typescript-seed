{
    "rules": {
        "no-floating-promises": [
            true,
            "BlueBird"
        ],
        "prefer-const": true,
        "no-var-keyword": true,
        "object-literal-shorthand": true,
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "ignore"
            }
        ]
    }
}
